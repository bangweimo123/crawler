{
	"comment" : "中国经济网-食品频道",
	"domainTag" : "ce_cysc_sp",
	"crawlerBaseInfo" :
	{
		"baseUrl" : "http://www.ce.cn/cysc/sp/",
		"threadCount" : 20,
		"downloaderPlugins":{"http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/":"jsDownloader","http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/index\\_\\d+\\.shtml":"jsDownloader"}
	},

	"crawlerTrigger" :
	[
		{
			"type" : "simple_once",
			"value" : false
		},

		{
			"type" : "lion",
			"value" : "merchant-today-news-frontground-service.crawler.trigger.ce.cysc.sp"
		},

		{
			"type" : "time",
			"value" : "0 0 2 * * ?"
		}
	],

	"site" :
	{
		"charset" : "gb2312",
		"timeOut" : 30000
	},


	"urlBuilder" :
	{

		"baseUrlFilter" : "((http://www\\.ce\\.cn/cysc/sp/info/\\d+/\\d+/t\\d+\\_\\d+\\.shtml)|((http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/index\\_\\d+\\.shtml))|(http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/))",

		"urlFilterPlugins" :
		{
		  "(http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/)" : "((http://www\\.ce\\.cn/cysc/sp/info/\\d+/\\d+/t\\d+\\_\\d+\\.shtml)|(http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/index\\_\\d+\\.shtml))",
		  "(http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/index\\_\\d+\\.shtml)" : "((http://www\\.ce\\.cn/cysc/sp/info/\\d+/\\d+/t\\d+\\_\\d+\\.shtml)|(http://www\\.ce\\.cn/cysc/sp/[a-zA-Z]+/index\\_\\d+\\.shtml))"
		},

		"baseCount" : 8000
	},


	"fieldBuilder" :
	[
	  {
		"fieldName" : "keyword",
		"xpathSelector" : "//meta[@name='KEYWords']/@content",
		"isList" : false,
		"converter" : "stringSplitConverter",
		"converterParam" : "\\?;| "
	  },

	  {
		"fieldName" : "title",
		"xpathSelector" : "//h1[@id='articleTitle']/text()",
		"isList" : false
	  },

	  {
		"fieldName" : "source",
		"xpathSelector" : "//span[@id='articleSource']/text()",
		"isList" : false,
		"script" : "function dataConverter(data){ if(null==data){return data}; begin = data.indexOf('《'); end = data.indexOf('》');if((begin!=-1) && (end!=-1)){return data.substring(begin+1,end)}; return data.substring(data.indexOf('：')+1,data.length)}",
		"converter" : "stringTrimConverter"
	  },

	  {

		"fieldName" : "date",
		"xpathSelector" : "//span[@id='articleTime']/text()",
		"isList" : false,
		"script" : "function dataConverter(data){ if(null==data){return data};return data.replace(/年/g,'-').replace(/月/g,'-').replace(/日/g,'');}",
		"converter" : "dateConverter"
	  },

	  {
		"fieldName" : "author",
		"xpathSelector" : "//span[@id='articleAuthor']/text()",
		"isList" : false,
		"converter" : "stringTrimConverter"
	  },

	  {
		"fieldName" : "thumbnail",
		"cssSelector" : ".TRS_Editor img",
		"cssSelectorAttrName" : "src",
		"isList" : false,
		"converter" : "imgConverter"
	  },

	  {
		"fieldName" : "content",
		"cssSelector" : ".TRS_Editor",
		"cssSelectorAttrName" : "innerhtml",
		"isList" : false
	  }
	]
}